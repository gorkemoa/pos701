<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting for Android 12+ -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Disable the Android splash screen's fade out animation to avoid a flicker -->
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <!-- Set the splash background color -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <!-- Set the splash screen icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!-- Disable the splash screen fade out -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <!-- Traditional background for older versions -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources> 