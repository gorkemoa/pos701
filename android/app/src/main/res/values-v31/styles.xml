<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting for Android 12+ -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Set the splash background color -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <!-- Set the splash screen icon to full image -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/powered_by</item>
        <!-- Set icon size to maximum -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <!-- Keep splash screen longer for smooth transition -->
        <item name="android:windowSplashScreenAnimationDuration">500</item>
        <!-- Traditional background for older versions -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources> 